<!DOCTYPE html>
<html lang="en">

<head>
    <title>Details</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css">
    <script>
        $(document).ready(function () {
            $('.delete-review').on('click', function () {
                const reviewId = $(this).data('review-id');
                const movieId = $(this).data('movie-id');
                console.log(movieId);
                Swal.fire({
                    title: 'Are you sure?',
                    text: 'You won\'t be able to revert this!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!',
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/${reviewId}/${movieId}/delete-review`;
                    } else {
                        Swal.fire('Cancelled', 'Your file is safe :)', 'info');
                    }
                });
            });
        });
    </script>
</head>

<body>
    <div class="mb-4 mb-4">
        <header>
            <div class=" py-3 bg-primary ">
                <div> <a href="/">
                        <h1 class="col-xl-12 col-lg-12 col-md-12 col-sm-12 my-0 text-white">Movie Details Management
                            System
                        </h1>
                    </a></div>
            </div>

            <div class="d-flex justify-content-end w-100 text-right mt-2">
                <a class="details bg-primary p-1 rounded nav m-0 mr-3 d-inline-block" href="/">Home</a>
            </div>
        </header>
        <main>
            <div class="details">
                <div class="details  p-3 rounded d-flex align-items-center">

                    <% if (movieDetails!==null&& typeof movieDetails!=='undefined') { %>

                    <table style="width: 100%;">
                        <tr>

                            <th colspan="2" style="width: 100%;font-size: 150%;"><%= movieDetails.title %></td>
                        </tr>
                        <tr>
                            <td>Release Date:</td>
                            <td> <%= movieDetails.release_date %></td>
                        </tr>
                        <tr>
                            <td>Director:</td>
                            <td><%= movieDetails.director %></td>
                        </tr>
                        <tr>
                            <td>Genre:</td>
                            <td><%= movieDetails.genre %></td>
                        </tr>
                        <tr>
                            <td>Language:</td>
                            <td><%= movieDetails.language %></td>
                        </tr>
                        <tr>
                            <td>Runtime: </td>
                            <td><%= movieDetails.runtime %> mins</td>
                        </tr>

                        <tr>
                            <td>Number of Reviews:</td>
                            <td><%= movieDetails.review_count %></td>
                        </tr>

                        <tr>
                            <td colspan="2">Description: </td>
                        </tr>
                        <tr>
                            <td colspan="2"><%= movieDetails.description %>
                            </td>
                        </tr>
                    </table>


                </div>

                <div class="reviews">
                    <div>
                        <div class="add-review d-flex justify-content-between mb-5">
                            <h4 class="text-primary">Reviews</h4>
                        </div>

                        <div class="review-input-div d-block mb-5">
                            <form action="/<%= movieDetails.movie_id%>/add-review" method="post"
                                id="addReviewForm">
                                <input type="text" class="review-input" maxlength="200" name="review">
                                <button type="submit" class="btn review-submit-button">ADD</button>
                            </form>
                        </div>
                        <hr>
                        <div>
                            <% reviews.forEach((item) => { %>


                            <div class="review d-flex justify-content-between mb-3">
                                <div>
                                    <p><%= item.review %>
                                    </p>
                                </div>
                                <div>
                                    <a class="bg-white p-1 px-2 ml-2 rounded delete-review" title="Delete Review"
                                        data-review-id="<%= item.review_id %>"
                                        data-movie-id="<%= movieDetails.movie_id%>">

                                        <i class=" trash-icon fa fa-trash " aria-hidden="true"></i></a>
                                </div>
                            </div>
                            <hr>
                            <% }) %>
                        </div>
                    </div>
                </div> <% } else { %>
                <div class="details bg-secondary text-white p-0 m-0 w-100 rounded text-center">
                    <p class="m-0">NO RESULTS FOUND!!!</p>
                </div>
                <% } %>

            </div>
        </main>
    </div>



</body>

</html>